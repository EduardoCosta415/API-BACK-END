# Porta que seu servidor vai rodar (pode ser 3000 ou qualquer outra)
PORT=3000

# Configurações do banco de dados MySQL
DB_HOST=localhost            # endereço do seu banco (ex: localhost ou IP remoto)
DB_USER=seu_usuario          # usuário do banco
DB_PASSWORD=sua_senha        # senha do banco
DB_NAME=nome_do_banco        # nome da base de dados

# URL do frontend que fará requisições para a API (para CORS)
FRONTEND_URL=https://poseducamaisminas.com.br

# Ambiente (development, production, etc)
NODE_ENV=development